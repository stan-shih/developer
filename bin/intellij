#!/bin/bash
function install () {
   . $DEV_HOME/etc/intellij.conf
   if [[ $OS_WINDOWS == "Y" ]]; then
      installapp -r $INTELLIJ_HOME intellij $INTELLIJ_DOWNLOAD_URL_WINDOWS
   elif [[ $OS_MACOS == "Y" ]]; then
      installapp -s "IntelliJ IDEA CE.app" -t dmg $INTELLIJ_HOME intellij $INTELLIJ_DOWNLOAD_URL_MACOS
   elif [[ $OS_LINUX == "Y" ]]; then
      echo "Can't support!!!"
   fi
}

usage="$(basename -- "$0") [-hi] -- IntelliJ Application

   Option:
      -h  show this help text
      -i  Install Application
"
while getopts 'hi' option; do
  case "$option" in
   h) echo "$usage"
      exit
      ;;
   i) echo "Install IntelliJ..."
      install
      exit
      ;;
   :) printf "missing argument for -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
   \?) printf "illegal option: -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND - 1))
####
#### Main Script
####
if [ ! -d $INTELLIJ_HOME ]; then
   echo "Please install first.
   
   Execute: 
            intellij -i"
   exit 1
fi
if [[ $OS_WINDOWS == "Y" ]]; then
   start idea64.exe
elif [[ $OS_MACOS == "Y" ]]; then
   open -a "IntelliJ IDEA CE.app"
elif [[ $OS_LINUX == "Y" ]]; then
  echo "Can't support!!!"
fi
