#!/bin/bash

usage="pde install <application> [-f <file-or-path>]  -- install application.

   Option:
         -h  show this help text
         -f  Install offline

   Example:
         $ pde install baretail
         $ pde install dbeaver
         $ pde install intellij
"

installPath=$DEV_HOME/usr/install
export PATH=$DEV_HOME/usr/sbin:$installPath:$PATH
if [ "$2" == "-f" ]; then
  if [ -z "$3" ]; then
    echo "$usage"
    exit 1
  fi
  echo "Activate offline installation mode!!!"
  OFFLINE=$3
fi

case $1 in
  dbeaver)
    $installPath/dbeaver $OFFLINE
    exit 0
    ;;
  intellij)
    $installPath/intellij $OFFLINE
    exit 0
    ;;
  baretail)
    $installPath/baretail $OFFLINE
    exit 0
    ;;
  *)
    echo "$usage"
    exit 1
    ;;
esac
