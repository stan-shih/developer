#!/bin/bash
function install () {
   . $DEV_HOME/etc/url.dbeaver.conf
   if [ "$1" != ''  ]; then
      installapp -f $DBEAVER_HOME dbeaver 
      return 1
   fi
   if [[ $OS_WINDOWS == "Y" ]]; then
      installapp $DBEAVER_HOME dbeaver $DBEAVER_DOWNLOAD_URL_WINDOWS
   elif [[ $OS_MACOS == "Y" ]]; then
      installapp -t dmg -s DBeaver.app $DBEAVER_HOME dbeaver $DBEAVER_DOWNLOAD_URL_MACOS
   elif [[ $OS_LINUX == "Y" ]]; then
      echo "Can't support!!!"
   fi
}

usage="$(basename -- "$0") [-hif] -- Dbeaver Application

   Option:
      -h  show this help text
      -i  Install DBeaver
      -f  Install DBeaver offline
"
while getopts 'hif:' option; do
  case "$option" in
   h) echo "$usage"
      exit
      ;;
   i) echo "Install DBeaver..."
      install
      ;;
   f) echo "Install DBeaver offline..."
      install $OPTARG
      ;;
   :) printf "missing argument for -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
   \?) printf "illegal option: -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND - 1))
####
#### Main Script
####
if [ ! -d $DBEAVER_HOME ]; then
   echo "Please install first.
   
   Execute: 
            dbeaver -i"
   exit 1
fi
if [[ $OS_WINDOWS == "Y" ]]; then
   start dbeaver.exe
elif [[ $OS_MACOS == "Y" ]]; then
   open -a DBeaver.app
elif [[ $OS_LINUX == "Y" ]]; then
  echo "Can't support!!!"
fi
