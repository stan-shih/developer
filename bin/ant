#!/bin/bash
function install () {
   ANT_DOWNLOAD_URL=https://archive.apache.org/dist/ant/
   if [[ "$DEV_ENV_OS" =~ ^msys.*$ ]]; then
      # Windows
      installapp -s apache-ant-1.10.9 $ANT_HOME ant https://archive.apache.org/dist/ant/binaries/apache-ant-1.10.9-bin.zip
   elif [[ "$DEV_ENV_OS" =~ ^darwin.*$ ]]; then
      # MacOS
      ANT_DOWNLOAD_URL=
      echo "Can't support!!!"
   elif [[ "$DEV_ENV_OS" =~ ^linux.*$ ]]; then
      # Unix
      ANT_DOWNLOAD_URL=
      echo "Can't support!!!"
   fi
}

usage="$(basename "$0") [-hi] -- Apache Ant Application

   Option:
      -h  show this help text
      -i  Install Application
"
while getopts 'hi' option; do
  case "$option" in
   h) echo "$usage"
      exit
      ;;
   i) echo "Install Apache Ant..."
      install
      exit
      ;;
   :) printf "missing argument for -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
   \?) printf "illegal option: -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND - 1))
####
#### Main Script
####
if [ ! -d $ANT_HOME ]; then
   echo "Please install first.
   
   Execute: 
            ant -i"
   exit 1
fi
$ANT_HOME/bin/ant $*
