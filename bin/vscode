#!/bin/bash
function install () {
   . $DEV_HOME/etc/vscode.conf
   if [[ $OS_WINDOWS == "Y" ]]; then
      if [ "$1" == '' ]; then
         installapp -r $VSCODE_HOME vscode $VSCODE_DOWNLOAD_URL_WINDOWS
      else
         installapp -f -r $VSCODE_HOME vscode $1
      fi
   elif [[ $OS_MACOS == "Y" ]]; then
      installapp -a -s "Visual Studio Code.app" $VSCODE_HOME vscode $VSCODE_DOWNLOAD_URL_MACOS
   elif [[ $(osIsLinux) == "Y" ]]; then
      echo "Can't support!!!"
   fi
}

usage="$(basename -- "$0") [-his] [ZIP_FILE_PATH] -- Visual Studio Code Application

   Option:
      -h          show this help text
      -i          Install Visual Studio Code
      -s PATH     Install Visual Studio Code by file
"
while getopts 'his:' option; do
  case "$option" in
   h) echo "$usage"
      exit
      ;;
   i) echo "Install Visual Studio Code..."
      install
      exit
      ;;
   s) echo "Install Visual Studio Code..."
      install $OPTARG
      exit
      ;;
   :) printf "missing argument for -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
   \?) printf "illegal option: -%s\n" "$OPTARG" >&2
      echo "$usage" >&2
      exit 1
      ;;
  esac
done
shift $((OPTIND - 1))
####
#### Main Script
####
if [ ! -d $VSCODE_HOME ]; then
   echo "Please install first.
   
   Execute: 
            vscode -i"
   exit 1
fi
if [[ $OS_WINDOWS == "Y" ]]; then
  code $*
elif [[ $OS_MACOS == "Y" ]]; then
  open -a "$DEV_HOME/opt/vscode/Visual Studio Code.app" --args $*
elif [[ $OS_LINUX == "Y" ]]; then
  echo "Can't support!!!"
fi
